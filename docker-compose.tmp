version: '3'

volumes:
  data-volume:

services:
  dispatcher: 
    image: nginx:latest
    container_name: dispatcher
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./log:/var/log/nginx
      - ./certs:/etc/ssl
      - data-volume:/repository
    ports:
      - 8082:8082
      - 443:443
    depends_on:
      - validator
      - mano
  database:
    image: mongo:latest
    container_name: database
    environment:
      - MONGO_INITDB_DATABASE=experimentsdb
      #- MONGO_INITDB_ROOT_USERNAME=5genesis
      #- MONGO_INITDB_ROOT_PASSWORD=5genesisPASS
    volumes:
      #- ./database/init-mongo.js:/docker-entrypoint-initdb.d/init-mongo.js:ro
      - ./database/mongo-volume:/data/db
    ports:
      - '27017-27019:27017-27019'
  validator:
    build: ./validator
    image: validator
    container_name: validator
    env_file:
      - ./validator/config.env
    command: python validator.py
    volumes:
      - "./validator:/validator"
    ports:
      - '5100:5100'
    restart: always
    depends_on:
      - database
  mano:
    build: ./mano
    image: mano
    container_name: mano
    command: python mano.py
    volumes:
      - "./mano:/mano"
      - data-volume:/tmp/onboarding
    ports:
      - '5101:5101'
    restart: always
  swagger:
    image: 'swaggerapi/swagger-ui'
    container_name: swagger
    environment:
      - SWAGGER_JSON=/my_swagger/swagger.json
    ports:
      - '5002:8080'
    volumes:
      - './swagger:/my_swagger'
    depends_on:
      - mano
      - validator

  clean_cache:
    build: ./clean_cache
    image: clean_cache
    command: python clean_cache.py
    container_name: clean_cache
    volumes:
      - data-volume:/tmp/onboarding
    restart: always

