{


  "definitions": {

     "NS_list": {
      	"type": "array",
      	"minItems": 2,
  	  	"maxItems": 2,
        "contains": {
     		"type": "string"}

    }


  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Experiment descriptor Schema",
  "required": [
    "TestCases",
    "Automated",
    "UEs",
    "Slice",
    "NSs",
    "ExperimentType",
    "Scenario",
    "Parameters",
    "Version"
  ],
  "properties": {

    "ReservationTime": {
      "$id": "#/properties/ReservationTime",
      "type": ["integer", "null"],
      "title": "Reservation time for experiment"

   },

    "Automated": {
      "$id": "#/properties/Automated",
      "type": "boolean",
      "title": "Automated experiment"

   },

   "ExperimentType": {
      "$id": "#/properties/ExperimentType",
      "type": "string",
      "title": "Experiment type"

   },
     "ExclusiveExecution": {
      "$id": "#/properties/ExclusiveExecution",
      "type": "boolean",
      "title": "ExclusiveExecution experiment"

   },

    "TestCases": {
      "$id": "#/properties/TestCases",
      "type": "array",
      "title": "List of Testcases to be executed along with the experiment",
      "items": {
        "$id": "#/properties/TestCases/items",
        "type": "string",
        "title": "Testcase ID",
        "examples": [
          "TC1",
          "TC2"
        ],
        "pattern": "^(.*)$"
      }
    },
    "UEs": {
      "$id": "#/properties/UEs",
      "type": "array",
      "title": "List of UEs",
      "items": {
        "$id": "#/properties/UEs/items",
        "type": "string",
        "title": "Name of the UE",
        "examples": [
          "UE1",
          "UE2"
        ],
        "pattern": "^(.*)$"
      }
    },
    "Slice": {
      "$id": "#/properties/Slice",
      "type": ["string", "null"],
      "title": "Slice ID",
      "examples": "fer9af0gfg0ads",
      "pattern": "^(.*)$"
    },
    "NSs": {
      "$id": "#/properties/NSs",
      "type": "array",
      "items": { "$ref": "#/definitions/NS_list" },
      "title": "NS Id",


    },

    "Scenario": {
      "$id": "#/properties/Scenario",
      "type": ["string", "null"],
      "title": "The Scenario Schema",
      "items": {
        "$id": "#/properties/Scenario/items",
        "type": "string",
        "title": "Scenarios where the experiment is going to be executed",
        "examples": "scenario1",
        "pattern": "^(.*)$"
      }
    },
    "Application": {
      "$id": "#/properties/Application",
      "type": ["string", "null"],
      "title": "Application list",
      "items": {
        "$id": "#/properties/Application/items",
        "type": "string",
        "title": "Application",
        "examples": [
          "app1"
        ],
        "pattern": "^(.*)$"
      }
    },

    "Reservation_time": {
      "$id": "#/properties/Reservation_time",
      "type": "integer",
      "title": "Reservation time in minutes",
      "examples": [
        123
      ]
    }
  },

  "dependencies": {
    "RemoteDescriptor": ["Remote"],
    "Remote": ["RemoteDescriptor"]
  }
}